                </Storyboard>
            </BeginStoryboard>
            <BeginStoryboard x:Name="Menu_showclick_BeginStoryboard" Storyboard="{StaticResource Menu_showclick}"/>
            <BeginStoryboard x:Name="Menu_not_showclick_BeginStoryboard" Storyboard="{StaticResource Menu_not_showclick}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Mouse.MouseEnter" SourceName="toolBarTray">
            <BeginStoryboard Storyboard="{StaticResource OnGotFocus}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Mouse.MouseLeave" SourceName="toolBarTray">
            <BeginStoryboard Storyboard="{StaticResource OnLostFocus}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="btnStart">
            <BeginStoryboard x:Name="key_down_BeginStoryboard" Storyboard="{StaticResource key_down}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Mouse.MouseEnter" SourceName="TaskBar1">
            <BeginStoryboard Storyboard="{StaticResource TaskBar_GotFocus}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Mouse.MouseLeave" SourceName="TaskBar1">
            <BeginStoryboard  Storyboard="{StaticResource TaskBar_LostFocus}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="Menu_Showinfo">
            <BeginStoryboard x:Name="Menu_showclick_BeginStoryboard1" Storyboard="{StaticResource Menu_showclick}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="Menu_Showinfocoy">
            <BeginStoryboard x:Name="Menu_not_showclick_BeginStoryboard1" Storyboard="{StaticResource Menu_not_showclick}"/>
        </EventTrigger>

